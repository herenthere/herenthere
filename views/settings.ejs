    <div class="login-container container">
        <div class="panel">
          <div class="panel-body">
            <form id="login" name="login" action="/signin" method="POST">
              <legend style="text-align:center;">Settings</legend>
              <div class="form-group">
                <label for="language">Language</label>
                [X] English  [] American
              </div>
              <div class="form-group">
                <label for="distancemetric">Distance Metric</label>
                KM / Miles
              </div>
              <div class="form-group">
                <label for="hours">Hour</label>
                Normal/Weird americans (work in progress)
              </div>
              <br>
              <br>
              <label style="font-size:20px;">Change Password</label>
              <div class="form-group">
                    <label >Old Password</label>
                    <input type="password" name="firstname" id="firstname" placeholder="Old Password" class="form-control" autofocus>
              </div>
              <div class="form-group">
                <label for"newpassword">New Password</label>
                <input type="password"  name="newpassword" id="newpassword" placeholder="New Password" class="form-control" autofocus>
              </div>
              <div class="form-group">
                  <label for"newpassword">Confirm New Password</label>
                  <input type="password"  name="newpassword" id="newpassword" placeholder="Confirm New Password" class="form-control" autofocus>
                </div>
