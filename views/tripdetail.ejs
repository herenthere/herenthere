                </tr>

                <tr>
                    <td>Philadelphia, PA</td>
                    <td>52 North Road...</td>
                    <td>5 hr 34 min</td>
                    <td>305 mi</td>
                    <td>Residential</td>
                </tr>

                <tr>
                    <td>New York City, NY</td>
                    <td>70 East Avenue...</td>
                    <td>7 hr 01 min</td>
                    <td>366 mi</td>
                    <td>Restaurant</td>
                </tr>

                <tr>
                    <td>Washington, DC</td>
                    <td>12 McDonut Street...</td>
                    <td>5 hr 12 min</td>
                    <td>304 mi</td>
                    <td>Hotel</td>
                </tr>
            </table>
        </div>
    </body>
</html>

